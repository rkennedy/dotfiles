# mb = blinking start
# md = bold start
# me = mode end
# so = standout start
# se = standout end
# us = underline start
# ue = underline end
LESS_TERMCAP_mb=$'\E[01;31m' \
LESS_TERMCAP_md=$'\E[01;38;5;74m' \
LESS_TERMCAP_me=$'\E[0m' \
LESS_TERMCAP_so=$'\E[7m' \
LESS_TERMCAP_se=$'\E[0m' \
LESS_TERMCAP_us=$'\E[04;38;5;220m' \
LESS_TERMCAP_ue=$'\E[0m' \
command man "$@"

