#!/bin/sh
ECHO='echo -n'
case $1 in
    left-solid)
	if [ -z ${NO_POWERLINE_FONTS+x} ] || [ ${NO_POWERLINE_FONTS:-1} -eq 0 ]; then
	    $ECHO 
	else
	    $ECHO
	fi
	;;
    right-solid)
	if [ -z ${NO_POWERLINE_FONTS+x} ] || [ ${NO_POWERLINE_FONTS:-1} -eq 0 ]; then
	    $ECHO 
	else
	    $ECHO
	fi
	;;
    left-open)
	if [ -z ${NO_POWERLINE_FONTS+x} ] || [ ${NO_POWERLINE_FONTS:-1} -eq 0 ]; then
	    $ECHO 
	else
	    $ECHO '>'
	fi
	;;
    right-open)
	if [ -z ${NO_POWERLINE_FONTS+x} ] || [ ${NO_POWERLINE_FONTS:-1} -eq 0 ]; then
	    $ECHO 
	else
	    $ECHO '<'
	fi
	;;
    secure)
	if [ -z ${NO_POWERLINE_FONTS+x} ] || [ ${NO_POWERLINE_FONTS:-1} -eq 0 ]; then
	    $ECHO ' '
	else
	    $ECHO
	fi
	;;
esac
